{
  "name": "learn-three-fiber",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/ryotarohada/learn-three-fiber.git",
  "author": "ryotarohada <ryotarohada@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p watch:html watch:css watch:js server",
    "build": "run-s build:clean build:html build:css build:js build:copy",
    "server": "browser-sync start --config bs-config.js",
    "watch:html": "pug --hierarchy --out dist/ --basedir src/pug/index.pug --pretty src/pug/index.pug --watch",
    "watch:css": "sass src/scss/style.scss:dist/assets/css/style.css --watch",
    "watch:js": "esbuild src/ts/main.ts --bundle --outfile=dist/assets/js/main.js --watch",
    "build:html": "pug --hierarchy --out dist/ --basedir src/pug/index.pug --pretty src/pug/index.pug",
    "build:css": "sass src/scss/style.scss:dist/assets/css/style.css",
    "build:js": "esbuild src/ts/main.ts --bundle --outfile=dist/assets/js/main.js",
    "build:clean": "rimraf dist",
    "build:copy": "cpx \"src/copy/**/*\" dist/assets"
  },
  "dependencies": {
    "@react-three/drei": "^5.3.1",
    "@react-three/fiber": "^6.2.2",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@types/three": "^0.129.0",
    "browser-sync": "^2.26.14",
    "cpx": "^1.5.0",
    "esbuild": "^0.12.5",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.34.1",
    "three": "^0.129.0",
    "ts-lint": "^4.5.1",
    "typescript": "^4.3.2"
  }
}
